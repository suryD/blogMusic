{% extends 'base.html.twig' %}

{% block title %}The Midnight Computers{% endblock %}

{% block body %}



<section class="vh-100" style="background-color: #3e1f47 ;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow-lg" style="background-color: #FFFFFF ; border: none;
                                                               border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-flex">
                                <img src= " https://scontent-cdg4-2.xx.fbcdn.net/v/t39.30808-6/330918170_3436888469927087_6905493405742926771_n.jpg?_nc_cat=107&ccb=1-7&_nc_sid=5f2048&_nc_ohc=cnJg7aTLDLoAX-vAJ2y&_nc_oc=AQmQo2AT4PZdAy2s80j3hAWuyKlEgFfZXnrHGFlNQZX-MQy4_wBINixgapHuz-9QJjufNG_yGwCoRNeyFptYAeFT&_nc_ht=scontent-cdg4-2.xx&oh=00_AfCBEoi85qyyH8uRy9CPG0tdk6t-Z5oLvVqZ7_0QBOmK2Q&oe=65624D86"
                                     alt="connexion" class="img-fluid img-thumbnail " style="border-radius: 1rem 0 0 1rem;" />
                            </div>

                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">

                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}



                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="blog-header-logo h1 fw-bold mb-0">Connexion</span>
                                        </div>



                                        <div class="form-outline mb-4">
                                            <label for="inputUsername" class="mb-2">pseudo</label>
                                            <input type="text" value="{{ last_username }}" name="username"
                                                   id="inputUsername" class="form-control form-control-lg"
                                                   autocomplete="username" required autofocus>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label for="inputPassword" class="mb-2">Mot de passe</label>
                                            <input type="password" name="password" id="inputPassword"
                                                   class="form-control form-control-lg"
                                                   autocomplete="current-password" required>
                                        </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block"
                                                    type="submit">Se connecter</button>
                                        </div>

                                        {% if app.user %}
                                            <div class="mb-3">
                                                Vous êtes connecté(e) {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"> se déconnecter</a>
                                            </div>
                                        {% endif %}
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
