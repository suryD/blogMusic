{% extends 'base.html.twig' %}

{% block title %}The Midnight Computers{% endblock %}

{% block body %}



<section class="vh-100" style="background-color: #3e1f47 ;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow-lg" style="background-color: #FFFFFF ; border: none;
                                                               border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-flex">
                                <img src= "https://scontent-cdg4-1.xx.fbcdn.net/v/t39.30808-6/330193618_501950498793658_4004045549006425725_n.jpg?_nc_cat=105&ccb=1-7&_nc_sid=5f2048&_nc_ohc=2lNsMaN1pXMAX_ct_IA&_nc_ht=scontent-cdg4-1.xx&oh=00_AfC7u2TqZ7_q4tuKoUzjLbohrjUS6LUJJ9OB2L87r309pg&oe=65F58ECA "
                                     alt="connexion" class="img-fluid img-thumbnail " style="border-radius: 1rem 0 0 1rem;" />
                            </div>

                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">

                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}



                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="blog-header-logo h1 fw-bold mb-0"> Connexion</span>
                                        </div>



                                        <div class="form-outline mb-4">
                                            <label for="inputUsername" class="mb-2">pseudo</label>
                                            <input type="text" value="{{ last_username }}" name="username"
                                                   id="inputUsername" class="form-control form-control-lg"
                                                   autocomplete="username" required autofocus>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label for="inputPassword" class="mb-2">Mot de passe</label>
                                            <input type="password" name="password" id="inputPassword"
                                                   class="form-control form-control-lg"
                                                   autocomplete="current-password" required>
                                        </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block"
                                                    type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-music-note-beamed" viewBox="0 0 16 16">
                                                    <path d="M6 13c0 1.105-1.12 2-2.5 2S1 14.105 1 13c0-1.104 1.12-2 2.5-2s2.5.896 2.5 2m9-2c0 1.105-1.12 2-2.5 2s-2.5-.895-2.5-2 1.12-2 2.5-2 2.5.895 2.5 2"/>
                                                    <path fill-rule="evenodd" d="M14 11V2h1v9zM6 3v10H5V3z"/>
                                                    <path d="M5 2.905a1 1 0 0 1 .9-.995l8-.8a1 1 0 0 1 1.1.995V3L5 4z"/>
                                                </svg> se connecter </button>
                                        </div>

                                        {% if app.user %}
                                            <div class="mb-3">
                                                Vous êtes connecté(e) {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"> se déconnecter</a>
                                            </div>
                                        {% endif %}
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
